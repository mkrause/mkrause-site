<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>mkrause</title>
    
    <base href="{{ app.request.getBasePath() == '/' ? '/' : app.request.getBasePath() ~ '/' }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
{% if env == 'production' -%}
    <link rel="stylesheet" href="build/main.css">
{% else %}
    <link rel="stylesheet/less" href="style/main.less"> {#'now' | date('U')#}
    <script src="vendor/less.js/dist/less-1.5.0.js"></script>
{% endif %}
</head>
<body>
    <div id="container" ui-view></div>
    
    <script src="vendor/requirejs/require.js"></script>
    <script src="scripts/require_config.js"></script>
    <script>
{% if env == 'production' %}
    require.config({
        paths: {
            // Override the main module with the build file
            main: '../build/main'
        }
    });
{% endif %}
    // Run main.js (found in the directory specified by the RequireJS baseUrl)
    require(['main']);
    </script>
</body>
</html>
