<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>mkrause</title>
    
    <base href="{{ app.request.getBasePath() == '/' ? '/' : app.request.getBasePath() ~ '/' }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% if env == 'production' -%}
    <link rel="stylesheet" href="build/main.css">
{% else %}
    <link rel="stylesheet/less" href="style/main.less">
    <script src="vendor/less.js/dist/less-1.5.0.js"></script>
{% endif %}
    <style ng-bind="layout.style"></style>
</head>
<body>
    
    <span ng-bind="layout.style"></span>

{% if env == 'production' %}
    <!--
        A little sparse isn't it! This site was built using AngularJS, and all the code has
        been combined and minimized for performance. You can view the original source on:
        https://github.com/mkrause/mkrause-site
    -->
{% endif %}
    
    <div ui-view></div>
    
    <script src="vendor/requirejs/require.js"></script>
    <script src="scripts/require_config.js"></script>
    <script>
{% if env == 'production' %}
    require.config({
        paths: {
            main: '../build/main'
        }
    });
{% endif %}
    require(['main']);
    </script>
</body>
</html>
